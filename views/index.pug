extends layout
block content
    h1 Welcome to the E-Library!
    .topnav
        a(href="/" class="active") Home
        a(href="/contact") Contact
        a(href="/category") Search by Category
        .search-container
            form(action="/", method="POST")
                input(type="text", placeholder="Search Library..", name="search")
                button(type="submit", value="submit") Submit
                hr
    hr
    p <b>#{msg}</b>
    p <b>Name: </b> #{searchResult}
    p <b>ISBN number :</b> #{isbn}
    p <b>Genre: </b> #{genre}
    p <b>Author: </b> #{author}
        form(action="/file" method="POST")
            p <b>File: <a href="/file"> #{searchResult}</a></b>        